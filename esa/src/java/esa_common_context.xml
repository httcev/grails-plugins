<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd" default-lazy-init="true">

	<context:annotation-config />

	<!-- Factory beans -->
	<bean id="configuration_manager" class="edu.kit.aifb.ConfigurationManager" />

	<!-- JDBC Database beans -->
	<bean id="wp_database_de" class="edu.kit.aifb.DefaultJdbcFactory">
		<property name="driver" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost?useCursorFetch=true&amp;user=esa&amp;password=esa" />
	</bean>

	<bean id="mt_terrier_index_factory" class="edu.kit.aifb.terrier.MTTerrierIndexFactory">
	    <!-- 
		<property name="terrierHome" value="#{systemProperties['TERRIER_HOME']}" />
		 -->
		<property name="terrierHome" value="#{systemProperties['user.home']}/research-esa/terrier" />
	</bean>

	<!-- NLP -->
	<bean id="multilingual_analyzer" class="edu.kit.aifb.nlp.MultiLingualAnalyzer">
		<property name="stopwordFiles">
			<list>
				<value>en:#{systemProperties['user.home']}/research-esa/stopwords_en.txt</value>
				<value>de:#{systemProperties['user.home']}/research-esa/stopwords_de.txt</value>
				<value>fr:#{systemProperties['user.home']}/research-esa/stopwords_fr.txt</value>
				<value>es:#{systemProperties['user.home']}/research-esa/stopwords_es.txt</value>
			</list>
		</property>
	</bean>
</beans>
